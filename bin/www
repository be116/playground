#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('playground:server');
//var http = require('http');
var https = require('https');

/**
 * Get port from environment and store in Express.
 */

//var port = normalizePort(80);
var sport = normalizePort(443);
//app.set('port', port);
app.set('sport', sport);

/**
 * Create HTTP/S server.
 */

var server = http.createServer(app);
var sserver = https.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

//server.listen(port);
//server.on('error', onError);
//server.on('listening', onListening);

sserver.listen(sport);
sserver.on('error', sonError);
sserver.on('listening', sonListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

